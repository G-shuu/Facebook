<div class="container">
  <div class="row">

  <h2>お知らせ</h2>
    <ul>
      <% @notifications.each do |notification| %>
        <hr>
        <li>
          <span><%= notification.read ? '既読' : '未読' %></span><br>
          <p>
            <%= notification.comment.user.try(:name) %>さんが
            あなたのブログ（<%= link_to "#{notification.comment.topic.content}", topic_path(notification.comment.topic, notification_id: notification.id) %>）にコメントしました。
          </p>
          <p><%= notification.created_at %></p>
        </li>
      <% end %>
    </ul>
  </div>
</div>
