<div class="container">
  <div class="row">
    <div class="wrapper col-md-6 col-sm-6 col-md-offset-3 col-sm-offset-3">
    <h1><投稿一覧></h1>
      <p class="post-button"><%= link_to 'New Post', new_topic_path, class: 'btn btn-primary' %></p>
      <% @topics.each do |topic| %>
        <ul class="topic-ul">
          <li>タイトル:<%= topic.title %></li>
          <li>内容:<%= topic.content %></li>
        </ul>
        <%= link_to 'detail', topic_path(topic.id), class: 'btn btn-info' %>
        <%= link_to 'Edit', edit_topic_path(topic.id), class: 'btn btn-success' %>
        <%= link_to 'delete', topic_path(topic.id), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you Sure?' } %>
      <hr />
      <% end %>
    </div>
  </div>
</div>

<div id="page-top-btn" class="page-top-btn">
  <p><a class="move-page-top" id="move-page-top">▲</a></p>
</div>
