<div class="container-users">
  <div class="row">
    <div class="wrapper col-md-6 col-sm-6 col-md-offset-3 col-sm-offset-3">
      <h2>ユーザー一覧</h2>
      <% @users.each do |user| %>
      <% if user.id != current_user.id %>
        <ul class="list-inline">
          <li><%= profile_img(user) %></li>
          <li><%= link_to user.name, user %></li>
          <li><%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post', class: 'btn btn-primary' %></li>
          <li><%= render partial: 'follow_form', locals: { user: user } if signed_in? %></li>
          <hr>
        </ul>
      <% end %>
      <% end %>
      <div class="page">
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>


<div id="page-top-btn" class="page-top-btn">
  <p><a class="move-page-top" id="move-page-top">▲</a></p>
</div>
